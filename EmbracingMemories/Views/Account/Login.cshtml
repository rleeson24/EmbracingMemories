@{
	ViewBag.Title = "Log in";
}

<div ng-controller="AccountOperationsController as accountOperations" class="row" style="padding-top:20px">
	<div class="col-xs-12 col-md-offset-2 col-md-8">
		<div class="row">
			<div class="col-xs-12 text-center">
				<h2>Welcome to <br />Embracing the Memories</h2>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<ul class="text-danger">
					<li id="errorMessages" data-ng-repeat="error in Errors">{{error}}</li>
				</ul>
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<label>Email</label>
				<input type="text" class="form-control" ng-model="EmailAddress" data-ng-disabled="RequestInProgress" />
			</div>
		</div>
		<div class="row form-group">
			<div class="col-sm-8 col-sm-offset-2">
				<label>Password</label>
				<input type="password" class="form-control" ng-model="Password" data-ng-disabled="RequestInProgress" />
			</div>
		</div>
		<div class="row">
			<div class="col-xs-2 col-sm-offset-2">
				<button class="btn btn-default" ng-click="loginInternal()" data-ng-disabled="RequestInProgress">Log In</button>
			</div>
			<div class="col-xs-6 text-right">
				<div class="checkbox">
					<label><input type="checkbox" ng-model="RememberMe" data-ng-disabled="RequestInProgress">Remember Me</label>
				</div>
			</div>
		</div>
		<div class="row">
			<p class="col-xs-5 col-sm-offset-2">
				@Html.ActionLink("Forgot Password?", "ForgotPassword")
			</p>
		</div>
	</div>
	<div class="row" style="display:none">
		<div class="col-md-4">
			<section id="socialLoginForm">
				@Html.Partial("_ExternalLoginsList")
			</section>
		</div>
	</div>
</div>
@section Scripts {
}
